{
  "name": "uncanny-cognitive-complexity",
  "displayName": "Uncanny Cognitive Complexity",
  "description": "See how Mr. Incredible gets more and more uncanny as the cognitive complexity of your code grows.",
  "version": "1.1.0",
  "publisher": "Dabolus",
  "homepage": "https://github.com/Dabolus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dabolus/uncanny-cognitive-complexity"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Visualization"
  ],
  "icon": "assets/icon.jpg",
  "galleryBanner": {
    "color": "#191919",
    "theme": "dark"
  },
  "keywords": [
    "uncanny",
    "incredible",
    "mr incredible",
    "complexity",
    "code complexity",
    "cognitive complexity",
    "visualization"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "uncanny-cognitive-complexity",
          "title": "Uncanny Cognitive Complexity",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "uncanny-cognitive-complexity": [
        {
          "type": "webview",
          "id": "uncanny-cognitive-complexity.openview",
          "name": "Uncanny Cognitive Complexity",
          "contextualTitle": "Uncanny Cognitive Complexity"
        }
      ]
    },
    "commands": [
      {
        "command": "uncanny-cognitive-complexity.openview.focus",
        "category": "Uncanny Cognitive Complexity",
        "title": "Open",
        "icon": "$(clear-all)"
      }
    ]
  },
  "pricing": "Free",
  "sponsor": {
    "url": "https://github.com/sponsors/Dabolus"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --minify --sourcemap --platform=node --target=node18 --format=cjs --outfile=dist/extension.js --external:vscode --external:cognitive-complexity-ts",
    "watch": "esbuild src/extension.ts --watch --sourcemap --platform=node --target=node18 --format=cjs --outfile=dist/extension.js",
    "lint": "eslint src --ext ts",
    "test": "npm run build && npm run lint && node ./dist/test/runTest.js",
    "publish-ext": "vsce publish"
  },
  "dependencies": {
    "cognitive-complexity-ts": "^0.6.5"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.3",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vscode/test-electron": "^2.3.5",
    "@vscode/vsce": "^2.21.1",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  }
}
